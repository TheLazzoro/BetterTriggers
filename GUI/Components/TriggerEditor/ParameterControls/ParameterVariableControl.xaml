<UserControl x:Class="GUI.Components.TriggerEditor.ParameterControls.ParameterVariableControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="175"/>
            <ColumnDefinition Width="647*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="65"/>
        </Grid.RowDefinitions>

        <Label Content="Search:" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Foreground="White"/>
        <TextBox x:Name="textBoxSearch" Height="20" Grid.Row="0" Grid.Column="1" Margin="60,5,5,5" BorderBrush="#FF0A0A0A" Background="#FF1E1E1E" Foreground="White" />
        <ListView x:Name="listViewVariables" Grid.Row="1" Grid.RowSpan="3" Grid.Column="0" Grid.ColumnSpan="2" BorderBrush="#00ABADB3" Background="#FF282828" Margin="2,0,0,5" Foreground="White" SelectionChanged="listViewFunction_SelectionChanged" >
            <ListView.Resources>
                <Style TargetType="{x:Type GridViewColumnHeader}">
                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                    <Setter Property="Background" Value="#BBBBBB"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Style>
            </ListView.Resources>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Variable" Width="300"/>
                    <GridViewColumn Header="Label" Width="100"/>
                    <GridViewColumn Header="Source" Width="75"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</UserControl>
