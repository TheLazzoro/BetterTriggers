<UserControl x:Class="GUI.Components.TriggerEditor.ParameterControls.ValueControlIcons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI" xmlns:shared="clr-namespace:GUI.Components.Shared"
             mc:Ignorable="d" 
             d:DesignHeight="450" Width="auto">
    <Grid x:Name="grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="125"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <shared:SearchableListControl x:Name="listControl" Grid.Column="1" Grid.RowSpan="2" Margin="2,0,0,0"/>
        <Label Content="Asset:" Grid.Column="1" Grid.Row="2" VerticalAlignment="Center" Foreground="{DynamicResource TextBrush2}"  />
        <TextBox x:Name="textBoxAsset" Margin="50,0,0,0" Height="22" Grid.Column="1" Grid.Row="2" Foreground="{DynamicResource TextBrush2}" TextChanged="textBoxAsset_TextChanged"/>
        <Image x:Name="imgPreview" Grid.Row="2"></Image>
            
    </Grid>
</UserControl>
