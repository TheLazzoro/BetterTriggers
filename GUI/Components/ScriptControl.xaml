<UserControl x:Class="GUI.Components.ScriptControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI"
             mc:Ignorable="d"
             TextOptions.TextFormattingMode="Ideal"
             d:DesignHeight="450" d:DesignWidth="800"  Background="#363636">
    
    <Grid x:Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <CheckBox x:Name="checkBoxIsEnabled" Content="Enabled" IsChecked="True" Foreground="#ccc" Margin="10,5,0,0" Click="checkBoxIsEnabled_Click" />

    </Grid>
</UserControl>
