<Window x:Class="GUI.ImportTriggersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="Import Triggers" Height="450" Width="800" MinWidth="250" Background="{DynamicResource BackgroundDark}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="15"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>

        <Button
            x:Name="btnSelect"
            Height="25"
            Width="95"
            Grid.Row="1"
            Click="btnSelect_Click"
            Margin="20,0,0,0">Select Map</Button>
        <Button
            x:Name="btnImport"
            IsEnabled="False"
            Height="25"
            Width="75"
            Grid.Row="1"
            Grid.Column="2"
            Click="btnImport_Click"
            HorizontalAlignment="Right"
            Margin="20,0,20,0">Import</Button>

        <TreeView x:Name="treeView" Background="{DynamicResource BackgroundDarker}" Grid.Row="2" Grid.ColumnSpan="3"></TreeView>

        <TextBlock
            x:Name="txtTotalTriggerItems"
            Foreground="{DynamicResource TextBrush}"
            Text="Total Items: 0"
            Grid.Row="3"
            VerticalAlignment="Center"
            Margin="5,0,0,0"
        />

        <ProgressBar 
            x:Name="progressBar"
            Width="auto"
            Grid.Column="1"
            Grid.Row="3"
            Visibility="Hidden"
        />
        <TextBlock
            x:Name="txtProgressPercent"
            Foreground="{DynamicResource TextBrush}"
            Grid.Column="2"
            Grid.Row="3"
            Margin="15,0,0,0"
            VerticalAlignment="Center"
        />
    </Grid>
</Window>
