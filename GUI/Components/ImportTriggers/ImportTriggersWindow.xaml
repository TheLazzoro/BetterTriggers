<Window x:Class="GUI.ImportTriggersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="Import Triggers" Height="450" Width="800" Background="{DynamicResource BackgroundDark}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="109*"/>
            <ColumnDefinition Width="691*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label VerticalAlignment="Bottom" HorizontalAlignment="Center">Select Map:</Label>
        <Button x:Name="btnSelect" Height="25" Width="75" Grid.Row="1" Click="btnSelect_Click" >Select</Button>

        <TreeView x:Name="treeView" Background="{DynamicResource BackgroundDarker}" Grid.Row="2" Grid.ColumnSpan="2"></TreeView>
    </Grid>
</Window>
