<UserControl x:Class="GUI.Components.RootControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI"
             mc:Ignorable="d" Background="#FF404040">
    <Grid x:Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="75*"/>
        </Grid.RowDefinitions>

        <Label Content="Custom Script Code Comment:" VerticalAlignment="Top" Foreground="White" Margin="0,24,0,0"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <TextBox x:Name="textBoxComment" Background="#FF282828" Foreground="#6A9955" BorderBrush="#00828790" TextWrapping="Wrap" AcceptsReturn="True" TextChanged="textBoxComment_TextChanged"/>
        </ScrollViewer>

        <GridSplitter Grid.Row="2" Height="3" HorizontalAlignment="Stretch" VerticalAlignment="Top" Background="#00F0F0F0" Margin="0,3,0,0" />
        <Label Content="Custom Script Code:" VerticalAlignment="Top" Foreground="White" Margin="0,10,0,0" Grid.Row="2"/>


    </Grid>
</UserControl>
