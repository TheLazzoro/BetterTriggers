<Window x:Class="GUI.Components.VersionCheck.NewVersionWindow_OnStart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI.Components.VersionCheck"
        mc:Ignorable="d"
        Title="New Version" Height="220" Width="400" Background="{DynamicResource BackgroundDark}" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid x:Name="grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>


        <CheckBox
            HorizontalAlignment="Left"
            x:Name="checkboxIgnore"
            Grid.Row="6"
            Grid.Column="1"
            Content="Don't show this again"
            Margin="15,0,0,0"
        />

        <Button
            x:Name="btnDownload"
            Margin="5"
            Grid.Row="6"
            Width="160"
            Content="Download Update"
            Grid.Column="1"
            HorizontalAlignment="Right"
            Click="btnDownload_Click"
        />

    </Grid>
</Window>
