            </Button.Background>
        </Button>

        <Button x:Name="btnRedo" Style="{DynamicResource ButtonStyle1}" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="135,0,5,0" HorizontalAlignment="Left" Click="btnCreateFolder_Click" >
            <Button.Background>
                <ImageBrush ImageSource="Resources/Icons/redo.png" Stretch="Fill" />
            </Button.Background>
        </Button>
        
        <Button x:Name="btnCut" Style="{DynamicResource ButtonStyle1}" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="160,0,5,0" HorizontalAlignment="Left" Click="btnCreateFolder_Click" >
            <Button.Background>
                <ImageBrush ImageSource="Resources/Icons/ui-editoricon-general_cut.png" Stretch="Fill" />
            </Button.Background>
        </Button>

        <Button x:Name="btnCopy" Style="{DynamicResource ButtonStyle1}" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="185,0,5,0" HorizontalAlignment="Left" Click="btnCreateFolder_Click" >
            <Button.Background>
                <ImageBrush ImageSource="Resources/Icons/ui-editoricon-general_copy.png" Stretch="Fill" />
            </Button.Background>
        </Button>

        <Button x:Name="btnPaste" Style="{DynamicResource ButtonStyle1}" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="210,0,5,0" HorizontalAlignment="Left" Click="btnCreateFolder_Click" >
            <Button.Background>
                <ImageBrush ImageSource="Resources/Icons/ui-editoricon-general_paste.png" Stretch="Fill" />
            </Button.Background>
        </Button>


        <Rectangle Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Left"  Width="1" Margin="247,4,0,4" Fill="#444" />

        <Button x:Name="btnCreateFolder" Style="{DynamicResource ButtonStyle1}" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="260,0,5,0" HorizontalAlignment="Left" Click="btnCreateFolder_Click" >
            <Button.Background>
                <ImageBrush ImageSource="Resources/Icons/ui-editoricon-triggercategories_folder.png" Stretch="None"/>
            </Button.Background>
        </Button>

        <Button x:Name="btnCreateTrigger" Style="{DynamicResource ButtonStyle1}" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="285,0,5,0" HorizontalAlignment="Left" Click="btnCreateTrigger_Click">
            <Button.Background>
                <ImageBrush ImageSource="Resources/Icons/ui-editoricon-triggercategories_element.png" Stretch="None" />
            </Button.Background>
        </Button>

        <Button x:Name="btnCreateScript" Style="{DynamicResource ButtonStyle1}" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="310,0,0,0" Click="btnCreateScript_Click" >
            <Button.Background >
                <ImageBrush ImageSource="Resources/Icons/editor-triggerscript.png" Stretch="None" />
            </Button.Background>
        </Button>

        <Button x:Name="btnCreateVariable" Style="{DynamicResource ButtonStyle1}" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="335,0,0,0" Click="btnCreateVariable_Click">
            <Button.Background>
                <ImageBrush ImageSource="Resources/Icons/actions-setvariables.png" Stretch="None"/>
            </Button.Background>
        </Button>

        <Button x:Name="btnCreateComment" Style="{DynamicResource ButtonStyle1}" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="360,0,0,0">
            <Button.Background>
                <ImageBrush ImageSource="Resources/Icons/editor-toolbar-triggercomment.png" Stretch="None"/>
