            </Button.Background>
        </Button>

        <Button x:Name="btnCreateAction" Style="{DynamicResource ButtonStyle1}" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="460,0,0,0" Click="btnCreateAction_Click">
            <Button.Background>
                <ImageBrush ImageSource="Resources/Icons/editor-triggeraction.png" Stretch="None"/>
            </Button.Background>
        </Button>

        <Rectangle Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Left"  Width="1" Margin="497,4,0,4" Fill="#444" />


        <Button x:Name="btnSaveScript" Style="{DynamicResource ButtonStyle1}" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="510,0,0,0" Click="btnSaveScript_Click">
            <Button.Background>
                <ImageBrush ImageSource="Resources/Icons/editor-toolbar-mapvalidation.png" Stretch="None"/>
            </Button.Background>
        </Button>

        <Button x:Name="btnTestMap" Style="{DynamicResource ButtonStyle1}" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="545,0,0,0" Click="btnSaveScript_Click">
            <Button.Background>
                <ImageBrush ImageSource="Resources/Icons/editor-testmap.dds" Stretch="None"/>
            </Button.Background>
        </Button>

        <Button x:Name="btnBuildMap" Style="{DynamicResource ButtonStyle1}" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="580,0,0,0" Click="btnSaveScript_Click">
            <Button.Background>
                <ImageBrush ImageSource="Resources/Icons/editor-toolbar-exportmap.dds" Stretch="None"/>
            </Button.Background>
        </Button>

        <GridSplitter Grid.Row="2" Grid.RowSpan="4" Grid.Column="0" Width="5" Background="#00404040" Margin="0,4,0,0"/>

        <gui:DragableTabControl x:Name="dragableTabControl" Grid.Row="3" Grid.Column="1" Grid.RowSpan="2" Background="#FF202020" BorderBrush="#FF202020" BorderThickness="0" />



    </Grid>

</Window>
