  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\BetterTriggers\BetterTriggers.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Resources\SyntaxHighlighting\JassHighlighting.xml" />
  </ItemGroup>

</Project>
