    <TargetFramework>netcoreapp3.1</TargetFramework>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Resources\Document.png" />
    <None Remove="Resources\DocumentFunction.png" />
    <None Remove="Resources\Folder.png" />
    <None Remove="Resources\SyntaxHighlighting\JassHighlighting.xml" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Resources\Document.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Resources\DocumentFunction.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Resources\Folder.png">
